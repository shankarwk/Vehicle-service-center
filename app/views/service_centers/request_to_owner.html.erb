<div class="container add"> 
  <%=flash[:msg]%>
  <%if @data%>

    <% @data.each do |i| %>
      <div class="row">
        <div class="col-3 shadow-lg p-3 mb-5 bg-body rounded col-4">
               <div class="row">
                         <div class="col-6">
                              Name: <br>
                              vehicle_number <br>
                              contact_number <br>
                              Categoty <br>
                              Status <br>
                              request_date <br>
                              request_time  
                         </div>     

                         <div class="col-6">
                          <%=i.name%> <br>
                          <%=i.vehicle_number%> <br>
                          <%=i.contact_number%> <br>
                          <%=i.category%> <br>
                          <%=i.status%> <br>
                          <%=i.request_date%> <br>
                          <%=i.request_time%> <br>
                          <%= button_to "confirm" ,order_confirmation_path(i), method: :post, class: 'btn-primary' %> 
                         </div>
                 
               </div>
        </div>
        <div class="col-1">

        </div>
        <div class="col-6 shadow-lg p-3 mb-5 bg-body rounded">
        

                  <%= form_with model:i ,method: :post,url:order_pending_service_centers_path do |form| %>
                   <div class="mt-3">
                    <%= form.label :name %><br>
                    <%= form.text_field :name , class: "form-control form-control-lg"%>
                  </div>

                  <div class="mt-2">
                    <%= form.label :vehicle_number %><br>
                    <%= form.text_field :vehicle_number , class: "form-control form-control-lg"%>
                  </div>

                  <div class="mt-2">
                    <%= form.label :Contact%><br>
                    <%= form.text_field :contact_number , class: "form-control form-control-lg"%>
                  </div>

                  <div class="mt-2">
                    <%= form.label :Category %><br>
                    <%= form.text_field :category , class: "form-control form-control-lg"%>
                  </div>


                  <div class="mt-2">
                    <%= form.label :Cost %><br>
                    <%= form.text_field :cost , class: "form-control form-control-lg"%>
                  </div>
                  

                  <div class="mt-2">
                    <%= form.label :Request_time %><br>
                    <%= form.text_field :request_time, class: "form-control form-control-lg"%>
                  </div>

                  <div class="mt-2">
                    <%= form.label :request_date%><br>
                    <%= form.text_field :request_date, class: "form-control form-control-lg"%>
                  </div>

                  <div class="mt-2">
                    <%= form.label :confirm_time%><br>
                    <%= form.text_field :confirm_time, class: "form-control form-control-lg"%>
                  </div>


                  <div class="mt-2">
                    <%= form.label :confirm_date%><br>
                    <%= form.text_field :confirm_date, class: "form-control form-control-lg"%>
                  </div>


                  <div class="mt-2">
                    <%= form.label :alloted_slot%><br>
                    <%= form.text_field :alloted_slot, class: "form-control form-control-lg"%>
                  </div>

            
                  <div class="mt-2">
                    <%= form.label :another_request_time%><br>
                    <%= form.text_field :another_request_time, class: "form-control form-control-lg"%>
                  </div>


                  <div class="mt-2">
                    <%= form.hidden_field :service_center_id, class: "form-control form-control-lg"%>
                  </div>
                   
                  <div class="text-center mt-3">
                    <%= form.submit %>
                  </div>

                  <%end%>
                  <div style="margin-top: -36px;">
                    <%= link_to "Cancel",order_cancel_path(i.id,i.service_center_id), class:"btn btn-danger"%>
                  </div>


        </div>
      </div>



      <!-- <%= link_to "confirm" ,order_confirmation_path(i.id), class: 'btn-primary'%> -->
      <!-- <%= link_to 'Click', show_data_client_path(i.id) ,class: 'btn btn-primary' %> -->
      <%end%>
        <%else%>
          <h1>Having nothing to display</h1>
          <%end%>

</div>


