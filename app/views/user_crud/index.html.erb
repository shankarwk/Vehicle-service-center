

<div class="bg">

    <h2>User table <%=link_to 'create', new_user_crud_path,class:"btn btn-danger text-center"%> </h2>
       
    
    <div class="table-wrapper">
        <table class="fl-table">
            <thead>
            <tr>
                <th>Email</th>
                <th>Role</th>
                <th>Show</th>
                <th>Edit</th>
                <th>Destroy</th>
            </tr>
            </thead>
            <tbody>
        
                <%@user.each do |i|%>
            <tr>
                <td> <%=i.email%></td>
                <td> <%= i.user_rule%></td>
                <td> <%=link_to "Show",user_crud_path(i.id),class:"btn btn-danger"%> </td>
                <td> <%=link_to "Edit",edit_user_crud_path(i.id),class:"btn btn-danger"%> </td>
                <td> <%= link_to "Destroy", user_crud_path(i.id),class:"btn btn-danger",data: {turbo_method: :delete,turbo_confirm: "Are you sure?"} %></td>
            </tr>
            <%end%>
           
            <tbody>
        </table>
    </div>
    
      </div>